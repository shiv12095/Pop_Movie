    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/list_item_video_image_view"
        android:layout_marginLeft="@dimen/activity_detail_min_padding"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_play_arrow"/>

    <TextView
        android:id="@+id/list_item_video_name_text_view"
        android:paddingLeft="@dimen/activity_detail_small_padding"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/activity_detail_main_text_size"
        android:layout_gravity="center"
        android:text="SDagdgadg"/>

</LinearLayout>