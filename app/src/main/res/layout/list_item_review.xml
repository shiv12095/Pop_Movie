<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/list_item_review_author_textview"
        android:layout_width="match_parent"
        android:textSize="@dimen/activity_detail_small_text_size"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/list_row_small_padding"/>

    <TextView
        android:id="@+id/list_item_review__content_textview"
        android:layout_width="match_parent"
        android:textSize="@dimen/activity_detail_main_text_size"
        android:layout_height="wrap_content" />

</LinearLayout>